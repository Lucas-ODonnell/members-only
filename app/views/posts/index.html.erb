<% unless user_signed_in? %>
  <%= link_to 'Sign Up', new_user_registration_path, class: "button is-info" %>
  <%= link_to 'Sign In', new_user_session_path, class: "button is-info" %>
<% else %>
  <%= link_to "Edit info", edit_user_registration_path, class: "button is-info" %>
  <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "button is-info" %>
<% end %>
<h1> The House of Gossip </h1>
<%= render 'posts' %>
<% if user_signed_in? %>
  <%= link_to "New Post", new_post_path, class: "button is-info" %> 
<% end %>

